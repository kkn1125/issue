{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@common/*": ["src/common/*"],
      "@lib/*": ["src/lib/*"],
      "@model/*": ["src/model/*"],
      "@module/*": ["src/module/*"]
    },
    "typeRoots": ["node_modules/@types", "src/types"],
    "types": ["node", "jest"],
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": true,
    "outDir": "./dist/",
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowUnusedLabels": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "ts-node": {
    "files": true,
    "compilerOptions": {
      "module": "NodeNext"
    }
  }
}
